class Solution {
public:
    int longestPalindrome(string s) {
        if(s.size() == 1)
        {
            return 1;
        }
        
        unordered_map<char,int> mp;
        for(auto it:s)
        {
            mp[it]++;
        }
        
        int ans=0;
        bool check=0;
        for(auto it:mp)
        {
            ans+=it.second - (it.second%2);
            
            if(it.second%2)
            {
                check=1;
            }
        }
        
        if(check)
        {
            ans+=1;
        }
        return ans;
    }
};
